# Copy this file to .env and adjust values if needed

# Environment
APP_ENV=development
RUST_LOG=debug

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# Database (Local PostgreSQL via root docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=auth_db
DATABASE_URL=postgres://postgres:postgres@localhost:5432/auth_db

# Test Database (port 5433 â€” tmpfs, no persistence)
TEST_POSTGRES_USER=postgres
TEST_POSTGRES_PASSWORD=postgres
