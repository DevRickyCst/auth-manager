TEST_DATABASE_URL=postgres://postgres:postgres@localhost:5433/auth_test_db

# JWT (Development - NOT SECURE FOR PRODUCTION!)
JWT_SECRET=dev_secret_key_change_in_production_12345678

# Frontend (for CORS)
