# Application Configuration
RUST_LOG=debug
APP_ENV=development

# Server Configuration (Local Development)
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Development Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=auth_db
DB_HOST=auth_db
DB_PORT=5432
DATABASE_URL=postgres://postgres:postgres@auth_db:5432/auth_db

# Connection Pool
DB_POOL_MAX_SIZE=15

# Test Database
TEST_POSTGRES_USER=postgres
TEST_POSTGRES_PASSWORD=postgres
TEST_POSTGRES_DB=auth_test_db
TEST_DATABASE_URL=postgres://postgres:postgres@auth-db-test:5432/auth_test_db

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE

# JWT Configuration (ES256)
JWT_ISSUER=auth-manager
JWT_AUDIENCE=auth-manager-client
JWT_ACCESS_TTL_MIN=15
JWT_REFRESH_TTL_MIN=43200
JWT_PRIVATE_KEY_PATH=/app/secrets/es256-private.pem
JWT_PUBLIC_KEY_PATH=/app/secrets/es256-public.pem

# Password Hashing
BCRYPT_COST=12

# Docker Resource Limits
DB_MEMORY_LIMIT=512M
DB_MEMORY_RESERVATION=256M
APP_MEMORY_LIMIT=1G
APP_MEMORY_RESERVATION=512M
TEST_DB_MEMORY_LIMIT=256M
TEST_DB_MEMORY_RESERVATION=128M
TEST_APP_MEMORY_LIMIT=512M
TEST_APP_MEMORY_RESERVATION=256M
